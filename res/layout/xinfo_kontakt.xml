<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/White" >

    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:background="@drawable/title_tab" >
	    <Button
	        android:id="@+id/btn_Back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/BACK"
	        android:textColor="@color/White"
	        android:layout_marginLeft="5dip"
	        android:background="@drawable/btn_zuruck" />
	    <TextView
	        android:id="@+id/txt_titlebar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/KONTAKT"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="18dip"
	        android:gravity="center"
	        android:textColor="@color/White" />
	    <Button
	        android:id="@+id/btn_Home"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="5dip"
	        android:background="@drawable/home" />
	</LinearLayout>
<!-- 	this is for image view  -->
	<LinearLayout 
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical" >
	    	<ImageView
	    	    	android:id="@+id/img_kontakt"
	    	    	android:layout_width="fill_parent"
	    	    	android:layout_height="230dip"
	    	    	android:background="@drawable/img_default"/>
	</LinearLayout>
	<View 
	    android:layout_width="fill_parent"
	    android:layout_height="16dip"
	    android:background="@drawable/breakline"/>
	
<!-- 	    this is used for details  -->
	<ScrollView 
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:background="@color/White"
	    	android:scrollbars="vertical" >
	    	<LinearLayout 
	    	    	android:layout_width="fill_parent"
	    	    	android:layout_height="fill_parent"
	    	    	android:orientation="vertical"
	    	    	android:gravity="center"
	    	    	android:paddingLeft="10dip"
	    	    	android:paddingRight="10dip" >
	    	    	
	    	    	<LinearLayout 
	    	    	    	android:layout_width="fill_parent"
	    	    	    	android:layout_height="wrap_content"
	    	    	    	android:orientation="vertical"
	    	    	    	android:background="@drawable/blank_bg"
	    	    	    	android:layout_marginTop="10dip" >
			    	    	<TextView
			    	    	    android:id="@+id/txt_name"
			    	    	    android:layout_width="fill_parent"
			    	    	    android:layout_height="wrap_content"
			    	    	    android:text="Title of Address"
			    	    	    android:textColor="@color/black"
			    	    	    android:layout_marginLeft="10dip"
			    	    	    android:textStyle="bold"
			    	    	    android:layout_marginTop="10dip" />
			    	    	<TextView
			    	    	    android:id="@+id/txt_address"
			    	    	    android:layout_width="fill_parent"
			    	    	    android:layout_height="wrap_content"
			    	    	    android:text="Address Line 1"
			    	    	    android:layout_marginLeft="10dip"
			    	    	    android:textColor="@color/sub_title_fontColor"
			    	    	    android:textStyle="bold"
			    	    	    android:layout_marginTop="5dip"
			    	    	    android:layout_marginBottom="5dip" />
	    	    	</LinearLayout>
	    	    	
	    	    	<LinearLayout 
	    	    	    	android:layout_width="fill_parent"
	    	    	    	android:layout_height="wrap_content"
	    	    	    	android:orientation="vertical" >
			    	    	<TextView
			    	    	    android:id="@+id/txt_phone_number"
			    	    	    android:layout_width="fill_parent"
			    	    	    android:layout_height="wrap_content"
			    	    	    android:textColor="@color/black"
			    	    	    android:textStyle="bold"
			    	    	    android:layout_marginTop="5dip"
			    	    	    android:paddingLeft="50dip"
			    	    	    android:gravity="center_vertical"
			    	    	    android:background="@drawable/contact_icon_bg" />
			    	    	
			    	    	<TextView 
			    	    	    android:id="@+id/txt_emailID"
			    	    	    android:layout_width="fill_parent"
			    	    	    android:layout_height="wrap_content"
			    	    	    android:text="emailemailid@email.com"
			    	    	    android:textColor="@color/black"
			    	    	    android:textStyle="bold"
			    	    	    android:layout_marginTop="5dip"
			    	    	    android:paddingLeft="50dip"
			    	    	    android:gravity="center_vertical"
			    	    	    android:layout_marginBottom="5dip"
			    	    	    android:background="@drawable/email_bg" />
	    	    	</LinearLayout>
	    	</LinearLayout>
	    	
	</ScrollView>
</LinearLayout>